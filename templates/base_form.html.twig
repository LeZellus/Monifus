<!DOCTYPE html>
<html class="dark">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Monifus, le moniteur Dofus{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="icon" type="image/png" sizes="32x32"
          href="{{ asset('uploads/favicon_package/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16"
          href="{{ asset('uploads/favicon_package/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('uploads/favicon_package/site.webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('uploads/favicon_package/safari-pinned-tab.svg') }}" color="#5bbad5">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('darkmode') }}
        {{ encore_entry_script_tags('randomAdvice') }}
    {% endblock %}
    <script>
        // On page load or when changing themes, best to add inline in `head` to avoid FOUC
        if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</head>
<body class="bg-cover bg-center bg-fixed py-16 lg:py-0 flex">
    {% include('includes/darkmode.html.twig') %}
    <section class="flex flex-col items-center justify-center py-8 mx-auto md:h-screen">
        {% block body %}
        {% endblock %}
    </section>

    <div id="advicePopup" class="popup bg-green-100 border-t-4 border-green-500 rounded-lg text-green-900 px-4 py-3 shadow-md" role="alert">
        <div class="popup-content flex">
            <div class="py-1 mr-4">
                <i data-feather="help-circle" class="text-primary-600"></i>
            </div>
            <div>
                <p class="font-bold">Point Conseil !</p>
                <p id="adviceText" class="text-sm">Make sure you know how these changes affect you.</p>
            </div>
            <i data-feather="x" class="close-btn"></i>
        </div>
    </div>
</body>
</html>

<div class="grid gap-2 p-4">
    {% if guild.discordUrl %}
        <a class="form-submit form-submit-discord uppercase" href="{{ guild.discordUrl }}">discord</a>
    {% endif %}
    {% if guild.websiteUrl %}
        <a class="form-submit form-submit-website uppercase" href="{{ guild.websiteUrl }}">site</a>
    {% endif %}

    <button id="members-btn"  class="form-submit">Voir les membres</button>

    {% if guild.leader == app.user %}
        <a class="form-submit form-submit-green" href="{{ path('app_guilds_edit', {'name': guild.name}) }}">Modifier la guilde</a>
    {% endif %}

    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        {% if guild == app.user.guild %}
            {# Utilisateur connecté et sur la page de sa propre guilde #}
            <a href="{{ path('app_guilds_leave', {'name': guild.name}) }}" id="members-btn" class="form-submit form-submit-youtube">Quitter la guilde</a>
        {% endif %}

        {% if isLeader == false and guild != app.user.guild %}
            <a href="{{ path('app_guilds_join', {'name': guild.name}) }}" id="members-btn" class="form-submit form-submit-green">Rejoindre la guilde</a>
        {% endif %}
    {% else %}
        {# Utilisateur non connecté #}
        <a href="{{ path('app_guilds_join', {'name': guild.name}) }}" id="members-btn" class="form-submit form-submit-green">Rejoindre la guilde</a>
    {% endif %}
</div>
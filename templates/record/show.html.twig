{# templates/record/show.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}

   <section class="grid gap-4">
       <div class="text-center">
           <a class="form-submit" href="{{ path('app_monster_show', {'id': record.monster.id}) }}">Retour</a>
       </div>
       <h1 class="text-center">Record de {{ record.user.pseudonymeDofus }} sur {{ record.monster.name }}</h1>
       <p class="text-center wrapper wrapper-style">Temps : {{ record.time|date('H:i:s') }}</p>

       <div class="wrapper wrapper-style grid gap-4">
           <h2 class="family text-3xl">Vid√©o du Record :</h2>
           <iframe class="aspect-video w-full rounded-lg overflow-hidden" src="" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
           <iframe width="560" height="315" src="{{ record.videoLink }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
       </div>
   </section>

{% endblock %}

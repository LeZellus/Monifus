<table class="w-full text-left rtl:text-right">
    <thead class="text-xs uppercase">
    <tr class="border-b border-gray-300 dark:border-gray-700">
        <th scope="col" class="p-2 ">
            <span class="hidden sm:block text-xs">Date de</span>
            <span class="text-primary-400 text-lg mt-1 drop-shadow-2xl family">Cr√©ation</span>
        </th>
        <th scope="col" class="p-2 ">
            <span class="hidden sm:block text-xs">Lot de</span>
            <span class="text-primary-400 text-lg mt-1 drop-shadow-2xl family">1</span>
        </th>
        <th scope="col" class="p-2 hidden xl:table-cell">
            <span class="hidden sm:block text-xs">Lot de</span>
            <span class="text-primary-400 text-lg mt-1 drop-shadow-2xl family">10</span>
        </th>
        <th scope="col" class="p-2 hidden xl:table-cell">
            <span class="sm:block text-xs">Lot de</span>
            <span class="text-primary-400 text-lg mt-1 drop-shadow-2xl family">100</span>
        </th>
        <th scope="col" class="p-2 hidden xl:table-cell">
            <span class="hidden sm:block text-xs">Liste d'</span>
            <span class="text-primary-400 text-lg mt-1 drop-shadow-2xl family">Actions</span>
        </th>
    </tr>
    </thead>
    <tbody>
    {% if monitor.prices is defined %}
        {% for price in monitor.prices %}
            <tr class="border-b border-gray-300 dark:border-gray-700">
                <td class="p-2 hidden xl:table-cell">{{ price.createdAt|date('d-m-y') }}</td>
                <td class="p-2 hidden xl:table-cell">{{ price.priceOne|number_format(0, '.', ' ') }} k</td>
                <td class="p-2 hidden xl:table-cell">{{ price.priceTen|number_format(0, '.', ' ') }} k</td>
                <td class="p-2 hidden xl:table-cell">{{ price.priceHundred|number_format(0, '.', ' ') }} k</td>
                <td class="p-2 flex space-x-2">
                    <a href="{{ path('app_sale_edit', {'id' : monitor.id}) }}">
                        <i data-feather="edit" class="text-tertiary"></i>
                    </a>
                    <form action="{{ path('app_monitor_delete', {'id': monitor.id}) }}" method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ monitor.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i data-feather="trash" class="text-red-400"></i>
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    {% endif %}
    </tbody>
</table>
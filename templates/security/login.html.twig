{% extends 'base_form.html.twig' %}

{% block title %}Connexion | {{ parent() }}{% endblock %}

{% block body %}
    <div class="wrapper wrapper-style wrapper-size">
        <div class="grid gap-6">
            <img class="mx-auto w-12 mt-2" src="{{ asset('uploads/logo.svg') }}" alt="Logo Monifus">
            <h1 class="text-center">Connexion</h1>

            <form class="grid gap-4" method="post">
                {% if app.session.get('authentication_error_message') %}
                    <p class="text-xs text-center text-red-400">{{ app.session.get('authentication_error_message') }}</p>
                    {% set _ = app.session.remove('authentication_error_message') %} {# Effacer le message de la session après l'affichage #}
                {% endif %}
                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="grid gap-2">
                    <label for="email" class="form-label">Email</label>
                    <input value="{{ last_username }}" placeholder="exemple@exemple.fr" type="email" name="email"
                           id="email" class="form-input" required="">
                </div>

                <div class="grid gap-2">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" name="password" id="password" placeholder="••••••••" class="form-input"
                           required="">
                </div>

                <div class="grid gap-2">
                    <div class="flex items-center">
                        <input name="_remember_me" id="remember" aria-describedby="remember" type="checkbox"
                               class="form-checkbox">
                        <div class="ml-3 text-sm">
                            <label for="remember" class="text-gray-500 dark:text-gray-300">Se souvenir de moi</label>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="flex justify-center">
                    <button type="submit" class="form-submit w-full">Connexion</button>
                </div>

                <a href="{{ path('oauth_discord_start') }}" class="flex items-center justify-center bg-discord space-x-4 p-2.5 rounded-lg transition duration-300 hover:bg-discord-600">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="#ffffff" viewBox="0 0 256 256"><path d="M104,140a12,12,0,1,1-12-12A12,12,0,0,1,104,140Zm60-12a12,12,0,1,0,12,12A12,12,0,0,0,164,128Zm74.45,64.9-67,29.71a16.17,16.17,0,0,1-21.71-9.1l-8.11-22q-6.72.45-13.63.46t-13.63-.46l-8.11,22a16.18,16.18,0,0,1-21.71,9.1l-67-29.71a15.93,15.93,0,0,1-9.06-18.51L38,58A16.07,16.07,0,0,1,51,46.14l36.06-5.93a16.22,16.22,0,0,1,18.26,11.88l3.26,12.84Q118.11,64,128,64t19.4.93l3.26-12.84a16.21,16.21,0,0,1,18.26-11.88L205,46.14A16.07,16.07,0,0,1,218,58l29.53,116.38A15.93,15.93,0,0,1,238.45,192.9ZM232,178.28,202.47,62s0,0-.08,0L166.33,56a.17.17,0,0,0-.17,0l-2.83,11.14c5,.94,10,2.06,14.83,3.42A8,8,0,0,1,176,86.31a8.09,8.09,0,0,1-2.16-.3A172.25,172.25,0,0,0,128,80a172.25,172.25,0,0,0-45.84,6,8,8,0,1,1-4.32-15.4c4.82-1.36,9.78-2.48,14.82-3.42L89.83,56s0,0-.12,0h0L53.61,61.93a.17.17,0,0,0-.09,0L24,178.33,91,208a.23.23,0,0,0,.22,0L98,189.72a173.2,173.2,0,0,1-20.14-4.32A8,8,0,0,1,82.16,170,171.85,171.85,0,0,0,128,176a171.85,171.85,0,0,0,45.84-6,8,8,0,0,1,4.32,15.41A173.2,173.2,0,0,1,158,189.72L164.75,208a.22.22,0,0,0,.21,0Z"></path></svg>
                    <span class="font-base text-white text-lg">Connexion avec Discord</span>
                </a>

                <a href="#" class="text-center link">Mot de passe oublié?</a>

                <p class="text-sm text-center font-light text-gray-500 dark:text-gray-400">
                    Pas encore inscrit ?
                    <a href="{{ path('app_register') }}" class="link">Inscription</a>
                </p>
            </form>
        </div>
    </div>
{% endblock %}
